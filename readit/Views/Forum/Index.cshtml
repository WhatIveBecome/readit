@model IEnumerable<readit.Models.ForumModel>

<h1>Forums</h1>

<br />
<a asp-action="Create" class="btn btn-primary">New Forum</a> 
<br />

<table class="table text-light">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><a asp-action="Edit" class="btn btn-success">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
