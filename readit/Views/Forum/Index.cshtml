 @model IEnumerable<readit.Models.ForumModel>

<h1>Forums</h1>

<a asp-action="Create" class="btn btn-primary mb-2 mt-2">New Forum</a>

<table class="table text-light">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><a id="underline" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></td>
                <td>@item.Description</td>
                <td>
                    <form asp-action="Delete" asp-controller="Forum" asp-route-id="@item.Id">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
            </tr>
        }
    </tbody>
</table>
