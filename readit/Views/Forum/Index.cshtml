 @model IEnumerable<readit.Models.ForumModel>

<div>
    <h1>Forums</h1>
</div>

<div class="mb-2 mt-4">
    <div class="row">
        <div class="col-7">
            <a asp-action="Create" class="btn btn-primary">New Forum</a>
        </div>
        <form asp-action="Index" class="col-3 text-end">
            <div class="d-flex">
                <input type="text" name="name" placeholder="Name" class="form-control me-sm-1" />
                <button type="submit" class="btn btn-dark"><i class="bi bi-search"></i></button>
            </div>
        </form>
    </div>
</div>
<table class="table text-light">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Number of Topics</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><a id="underline" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></td>
                <td>@item.Description</td>
                <td>@item.NumberOfTopics</td>
                <td>
                    <form asp-controller="Forum" asp-action="Delete" asp-route-id="@item.Id">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                     </form>
@*                    <a class="del btn btn-danger">Delete</a>
                    <div class="confirm hidden">
                        <h1>Are you sure?</h1>
                        <form asp-action="Delete" asp-controller="Forum" asp-route-id="@item.Id">
                            <input type="submit" value="Yes" class="btn btn-danger" />
                            <a class="btn btn-secondary" id="no">No</a>
                        </form>
                    </div>*@
            </tr>
        }
    </tbody>
</table>


<div class="overlay hidden"></div>

<script src="~/js/deleteItem.js"></script>
