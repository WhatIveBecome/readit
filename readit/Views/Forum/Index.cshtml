 @model IEnumerable<readit.Models.ForumModel>

<h1>Forums</h1>

<a asp-action="Create" class="btn btn-primary mb-2 mt-2">New Forum</a>

<form asp-action="Index" class="col-3 mt-4">
    <div class="input-group">
        <input type="text" name="name" placeholder="Name" class="form-control" />
        <button type="submit" class="btn btn-primary ml-2">Search</button>
    </div>
</form>

<table class="table text-light">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Number of Topics</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><a id="underline" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></td>
                <td>@item.Description</td>
                <td>@item.NumberOfTopics</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a class="del btn btn-danger">Delete</a>
                    <div class="confirm hidden">
                        <h1>Are you sure?</h1>
                        <form method="POST" asp-action="Delete" asp-controller="Forum" asp-route-id="@item.Id">
                            <input type="submit" value="Yes" class="btn btn-danger" />
                            <a class="btn btn-secondary" id="no">No</a>
                        </form>
                    </div>
            </tr>
        }
    </tbody>
</table>


<div class="overlay hidden"></div>

<script src="~/js/deleteItem.js"></script>
