@model readit.Models.ForumModel

@{
    ViewData["Title"] = "New Forum";
}

<a asp-action="Index"><h1 class="bi bi-arrow-left-circle"></h1></a>
<h1>Create New Forum</h1>

<hr />

<div class="row">
    <div class="col-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />

            @*// TODO ADD VALIDATION*@

            <div class="form-check">
                <input type="checkbox" name="checkbox" value="check" class="form-check-input" />
                <label class="form-check-label">
                    I accept <u><a asp-controller="Home" asp-action="Rules" target="_blank">rules</a></u>
                </label>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="save btn btn-primary col-3" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

<script src="~/js/checkbox.js"></script>