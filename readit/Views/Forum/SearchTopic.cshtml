@model readit.Models.ForumModel

@{
    ViewData["Title"] = "Forum";
}

<div>
    <a asp-action="Index"><img src="https://img.icons8.com/material-outlined/48/000000/back--v1.png" /></a>
    <h1>Forum: @Html.DisplayFor(model => model.Name)</h1>
</div>

<a asp-action="CreateTopic" asp-route-id="@Model.Id" class="btn btn-primary mb-2 mt-2">New Topic</a>

<form asp-action="SearchTopic" asp-route-id="@Context.Request.RouteValues["id"]" class="col-3 mt-4">
    <div class="input-group">
        <input type="text" name="name" placeholder="Name" class="form-control" />
        <button type="submit" class="btn btn-primary ml-2">Search</button>
    </div>
</form>

<table class="table text-light">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Topics != null)
        {
            @if (Model.Topics.Any())
            {
                @foreach (var item in Model.Topics)
                {
                    <tr>
                        <td><a id="underline" asp-controller="Topic" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Topic" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                            <a class="del btn btn-danger" id="del">Delete</a>
                            <div class="confirm hidden">
                                <h1>Are you sure?</h1>
                                <form asp-action="Delete" asp-controller="Topic" asp-route-id="@item.Id">
                                    <input type="submit" value="Yes" class="btn btn-danger" />
                                    <a class="btn btn-secondary" id="no">No</a>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

<div class="overlay hidden"></div>

<script src="~/js/deleteItem.js"></script>