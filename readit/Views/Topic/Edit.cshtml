@model readit.Models.TopicModel

@{
    ViewData["Title"] = "Edit";
}
<a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumModelId" class="btn btn-info">Back to forum</a>

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Topic" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
            <input class="inputId" type="hidden" asp-for="ForumModelId" class="form-control"/>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

<script src="~/js/script.js"></script>